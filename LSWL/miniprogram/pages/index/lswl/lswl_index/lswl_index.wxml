<!--miniprogram/pages/index/lswl/lswl_index/lswl_index.wxml-->
<!-- 导入资源 -->
<import src="/pages/assets/content.wxml" />

<view class="page">
  <!-- 轮播图 start -->
  <swiper class="banner" 
          indicator-dots="true"
          interval="3000" 
          autoplay="true" 
          duration="3000"
          circular="true">
          <block wx:for="{{images_list}}"  wx:key="_id">
            <swiper-item>
              <image src="{{item.img_url}}" mode="aspectFill" class="banner_image"/>
            </swiper-item>
          </block>
  </swiper>
  <!-- 轮播图 end -->

  <!-- 分类菜单 start -->
    <view class="index-menu">
      <block wx:for="{{type_menu}}" wx:key="_id">
        <template is="menu_type" data="{{item}}" />
      </block>
    </view>
  <!-- 分类菜单 end -->
</view>
