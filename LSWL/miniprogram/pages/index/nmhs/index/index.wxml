<view class="page">
  <!-- 表单 start-->
  <view class='huishou_bg'>
    <form bindsubmit="submitForm">
    <view class='huishou_form'>
      <view class='form'>
        <view class='title'>上门时间</view>
        <picker class='input_other'  
        mode="date" 
        value="{{date}}" 
        start="{{startTime}}" 
        end="2018-09-01" bindchange="bindPickerChange">
          <input disabled='false' name="doorTime" type='text' placeholder='请选择预约时间' value='{{doorTime}}'/>
        </picker>
        <view class='input_other' style="margin-left:0rpx;">
          <input  name="remark" value='{{remark}}' type='text' placeholder='备注(选填)'/>
        </view>
      </view>
      
      <view class='form'>
        <view class='title'>预约地点</view>
        <picker class='input_other'  
        range="{{region}}" bindchange="bindRegionChange" value="{{index}}" custom-item="{{customItem}}">
          <input disabled='false' name="yuyueAdress" value="{{region[index]}}" type='text' placeholder='观山湖区'/>
        </picker>
      </view>

      <view class='form'>
        <view class='title'>详细地址</view>
        <view class='input'>
          <input name="adressInfo" value="{{adressInfo}}" type='text' placeholder='如世纪城xx苑xx幢xx单元xx号' /></view>
      </view>

      <view class='form'>
        <view class='title'>对您称呼</view>
        <view class='input'>
          <input name="cellYou" value='{{cellYou}}' type='text' placeholder='如刘先生/女士' /></view>
      </view>

      <view class='form'>
        <view class='title'>联系电话</view>
        <view class='input'>
          <input name="phone" value='{{phone}}' type='text' placeholder='请填写手机号码' /></view>
      </view>

      <button class='form_last' form-type="submit">登记预约</button>
    </view>
    </form>
  </view>
  <!-- 表单 end-->

  <!-- 回收清单 start-->
  <view class='recyclingList'>
      <view class='recyclingList_title'>回 收 清 单
        <image class='recyclingList_title_img' bindtap='bindtapShow' src='/assets/images/index/whao.png' />
      </view>
      <view class='recyclingLIst_content'>
        <!-- 滑动菜单 start
          autoplay        是否自动切换
          indicator-dots  是否显示指示点
          circular        是否采用衔接滑动
          interval        自动切换时间间隔
          duration        滑动动画时长
          vertical        滑动方向是否为纵向
         -->
        <swiper class='swiper' indicator-dots="true" circular="true"  duration="1000">
          <swiper-item>
            <view class='content'>
              <view class='conten_content'>
                <image class='content_img' src='/assets/images/index/yifu.png' />
                <view class='content_text'>衣服</view>
              </view>
              <view class='conten_content'>
                <image class='content_img' src='/assets/images/index/feizhi.png' />
                <view class='content_text'>废纸</view>
              </view>
              <view class='conten_content'>
                <image class='content_img' src='/assets/images/index/xiezi.png' />
                <view class='content_text'>鞋子</view>
              </view>
            </view>
          </swiper-item>
          <swiper-item>
            <view class='content'>
              <view class='conten_content'>
                <image class='content_img' src='/assets/images/index/baobao.png' />
                <view class='content_text'>包包</view>
              </view>
              <view class='conten_content'>
                <image class='content_img' src='/assets/images/index/chuangdan.png' />
                <view class='content_text'>床单</view>
              </view>
              <view class='conten_content'>
                <image class='content_img' src='/assets/images/index/slp.png' />
                <view class='content_text'>塑料瓶</view>
              </view>
            </view>
          </swiper-item>
        </swiper>
        <!-- 滑动菜单 end -->
      </view>
  </view>
  <!-- 回收清单 end -->

