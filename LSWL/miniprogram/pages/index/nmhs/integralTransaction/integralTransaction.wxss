}

 /*头部*/
 .top{
   width: 100%;
   height: 222rpx;
   background-color: #fff;
   padding-top: 20rpx;
 }

 .top_title{
   width: 100%;
   font-size: 70rpx;
   text-align: center;
 }
 .top_text{
   text-align: center;
   width: 100%;
   font-size: 24rpx;
 }

/*筛选*/
.pageScreen{
  width: 100%;
  height: auto;
  background-color:#fff;
}

.integral_left{
  width: 30%;
  height: 300rpx;
  float: left;
   border-right: 1rpx dashed #005555;
   font-size: 26rpx;
}
.integral_right{
  width: 50%;
  height: 100rpx;
  margin-left: 5%;
  float: left;
}

/*送分*/
.so{
  width: 70%;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #ddd;
  text-align: center;
  margin:auto;
  border-radius: 10rpx;
  padding: 10rpx;
}
.shou{
  position: relative;
  top: 30rpx;
  width: 70%;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #ddd;
  text-align: center;
  padding: 10rpx;
  margin:auto;
  border-radius: 10rpx;
}
.active{
  background-color: #8EAFCE;
}

/*文本框*/
 .find_menu{
  width: 100%;
  border-radius: 10rpx;
  height: 100rpx;
  
  background-color: #F2F2F2;
  margin-bottom: 30rpx;
 }
/*文本框默认样式*/
 .input-placeholder {
  font-size: 26rpx;
  font-family:"黑体";
  color: #bbb;
}
.img{
  width: 40rpx;
  height: 40rpx;
  border-radius: 24rpx;
  position: relative;
  top: 24rpx;
  left: 100rpx;
}
 .menu_input{
   width: 70%;
   margin-top: 20rpx;
   margin-left: 50rpx;
   font-size: 26rpx;
   float: left;
   padding-bottom: 10rpx;
 }
 .isdisply{
   display: none;
 }

/*按钮*/
 .form_last{
  position: relative;
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0px auto;
  top: 500rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #EDE03A;
  color: #fff;
}

.form_last:active{
  background-color: #EACF02;
}

button::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 0px solid #fff;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 10px;
}
.btn_btn{
  width: 70%;
  height: 90rpx;
}